{
	"compilerOptions": {
    "jsx": "react",
		"allowJs": true,
		"checkJs": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"typeRoots": ["src/types", "node_modules/@types"],
		"baseUrl": "src",
		"lib": ["ES2015", "DOM"],
		"paths": {
			"@/*": ["*"]
		},
		"outDir": "dist",
		"experimentalDecorators": true
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src/**/*", "src/*"]
}
